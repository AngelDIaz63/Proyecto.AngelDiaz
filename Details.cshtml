@page "{id}"
@model Biblioteca.Pages.Prestamos.DetailsModel
@{
    ViewData["Title"] = "Detalles del Libro";

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">@ViewData["Title"]</h4>
                        <a asp-page="/Prestamos/Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Libro == null)
                    {
                        <div class="alert alert-danger text-center">
                            Libro no encontrado.
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <!-- Imagen del libro -->
                            <div class="col-md-4 text-center mb-4">
                                @if (!string.IsNullOrEmpty(Model.Libro.Foto))
                                {
                                    <img src="@Model.Libro.Foto" alt="@Model.Libro.Titulo" 
                                         class="img-fluid rounded shadow" style="max-height: 300px;">
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                         style="height: 300px; width: 100%;">
                                        <i class="bi bi-book text-muted" style="font-size: 80px;"></i>
                                    </div>
                                }
                                
                                <div class="mt-3">
                                    @if (Model.Libro.Disponible)
                                    {
                                        <span class="badge bg-success fs-6">Disponible</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">Prestado</span>
                                    }
                                </div>
                            </div>

                            <!-- Detalles del libro -->
                            <div class="col-md-8">
                                <dl class="row">
                                    <dt class="col-sm-4">Título:</dt>
                                    <dd class="col-sm-8">@Model.Libro.Titulo</dd>

                                    <dt class="col-sm-4">Autor:</dt>
                                    <dd class="col-sm-8">@(Model.Libro.Autor ?? "No especificado")</dd>

                                    <dt class="col-sm-4">Editorial:</dt>
                                    <dd class="col-sm-8">@(Model.Libro.Editorial ?? "No especificado")</dd>

                                    <dt class="col-sm-4">ISBN:</dt>
                                    <dd class="col-sm-8">@Model.Libro.ISBN</dd>

                                    @if (!Model.Libro.Disponible)
                                    {
                                        <dt class="col-sm-4">Prestado a:</dt>
                                        <dd class="col-sm-8">@Model.Libro.PrestadoA</dd>

                                        <dt class="col-sm-4">Fecha de préstamo:</dt>
                                        <dd class="col-sm-8">@Model.Libro.FechaPrestamo?.ToString("dd/MM/yyyy")</dd>
                                    }
                                </dl>

                                <div class="mt-4">
                                    <a asp-page="/Prestamos/Edit" asp-route-id="@Model.Libro.Id" 
                                       class="btn btn-warning me-2">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-page="/Prestamos/Delete" asp-route-id="@Model.Libro.Id" 
                                       class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                    @if (Model.Libro.Disponible)
                                    {
                                        <a asp-page="/Prestamos/Prestar" asp-route-id="@Model.Libro.Id" 
                                           class="btn btn-primary ms-2">
                                            <i class="bi bi-book"></i> Prestar
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-page="/Prestamos/Devolver" asp-route-id="@Model.Libro.Id" 
                                           class="btn btn-secondary ms-2">
                                            <i class="bi bi-arrow-return-left"></i> Devolver
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>